<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingTop="@dimen/double_margin"
	android:paddingLeft="@dimen/margin"
	android:paddingRight="@dimen/margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:fontFamily="@font/avenir_next_bold"
        android:text="@string/initial_settings_student"
        android:textColor="@android:color/black"
        android:textSize="@dimen/size_initial_settings_title"/>

    <Button
        android:id="@+id/freshman"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_initial_settings_big_button"
	    android:layout_marginTop="@dimen/margin"
        android:text="@string/initial_settings_student_freshman"
        android:textSize="@dimen/size_initial_settings_big_button"/>

    <Button
        android:id="@+id/transfer"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_initial_settings_big_button"
	    android:layout_marginTop="@dimen/margin"
        android:text="@string/initial_settings_student_transfer"
        android:textSize="@dimen/size_initial_settings_big_button"/>

</LinearLayout>